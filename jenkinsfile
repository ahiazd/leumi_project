pipeline {
    agent any
    stages {
        stage ("Git"){
            steps{
                git branch: 'main', url: 'https://github.com/ahiazd/leumi_project.git'
            }
        }
        stage ("Build container"){
            steps{
            sh '''
            pwd;
            docker build --file ${dockerfile_name} --tag ${image_tag_name} .
            sh '''
            }
        }  
        stage ("push to registry"){
            steps{
            sh '''
            cd ${workspace}
            docker tag ${image_tag_name} ahiazd/leumi_project:python-app-test-new;
            docker push ahiazd/leumi_project:python-app-test;
            sh '''
            }
       }
    }    
       }
    
