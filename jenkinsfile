pipeline {
environment {
registry = "ahiazd/leumi_project"
registryCredential = 'dockerhub_cred'
    agent any
    stages {
        stage ("Git"){
            steps{
                git branch: 'main', url: 'https://github.com/ahiazd/leumi_project.git'
            }
        }
        stage ("Build container"){
            steps{
            sh '''
            pwd;
            docker build --file ${dockerfile_name} --tag ${image_tag_name} .
            sh '''
            }
        }  
        stage ("push to registry"){
            steps{
            script {
            docker.withRegistry( '', registryCredential ) {
             sh '''
            cd ${workspace}
            docker tag ${image_tag_name} ahiazd/leumi_project:${tag_name_b4_push};
            docker push ahiazd/leumi_project:${tag_name_b4_push};
            sh '''
            }
            }
            }
       }
    }    
       }
    
