pipeline {
    agent any
    environment {
     DOCKERHUB_CREDENTIALS = credentials('ahiazd-dockerhub')
    }
    stages {
        stage ('Git'){
            steps{
                git branch: 'main', url: 'https://github.com/ahiazd/leumi_project.git'
            }
        }
        stage ('Build'){
            steps{
            sh 'docker build --file ${dockerfile_name} --tag ${image_tag_name} .'
            }
        }  
        stage ('Login'){
            steps{
            sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage ("push to registry"){
            steps{
             sh '''
            cd ${workspace}
            docker tag ${image_tag_name} ahiazd/leumi_project:${tag_name_b4_push};
            docker push ahiazd/leumi_project:${tag_name_b4_push};
            sh '''
            }
        }  
   }
}    
       
 
