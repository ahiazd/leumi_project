pipeline {
    agent any
    stages {
        stage ("Git"){
            steps{
                git branch: 'main', url: 'https://github.com/ahiazd/leumi_project.git'
            }
        }
        stage ("Build container"){
            steps{
            sh '''
            pwd;
            docker build --file ${dockerfile_name} --tag ${image_tag_name} .
            sh '''
            }
        }  
        stage ("push to registry"){
            steps{
            withCredentials([usernamePassword( credentialsId: 'docker-hub-credentials', usernameVariable: 'USER', passwordVariable: 'PASSWORD')]) {
            def registry_url = "registry.hub.docker.com/"
            bat "docker login -u $USER -p $PASSWORD ${registry_url}"
            docker.withRegistry("http://${registry_url}", "dockerhub_cred") {
            // Push your image now
             sh '''
            cd ${workspace}
            docker tag ${image_tag_name} ahiazd/leumi_project:${tag_name_b4_push};
            docker push ahiazd/leumi_project:${tag_name_b4_push};
            sh '''
            }
       }
    }    
       }
    
